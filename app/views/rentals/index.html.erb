<div class="container col-11">
  <h2 class="mt-3">検索結果：<%=@count %>件</h2>
  <div class="container-fluid search_result row card-deck justify-content-start">
    <% @rentals.each do |rental| %>
      <div class="card col-sm-6 col-md-3 mx-2 my-2" style ="width: 23%">
        <%= link_to("/rentals/#{rental.id}") do %>
          <% if rental.image.attached? %>
            <%= image_tag rental.image, class: "card-img-top"  %>
          <% else %>
            <%= image_tag "no_image.png", class: "w-100" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= rental.room %></h5>
            <p class="card-text"><%= rental.area %><%= rental.address %></p>
            <p class="card-text"><%= rental.price %>円</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
