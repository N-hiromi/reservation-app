<div class="container d-flex mt-5 justify-content-center ">
  <div class= "show_image col-6 h-50">
    <%= render "/layouts/refactoring/no_image", anything: @rental %>
  </div>
  <div class="description_container">
    <h2><%= @rental.room %></h2>
    <p><%= @rental.area%><%= @rental.address%></p>
    <p><%= @rental.price%>円/日</p>
    <p><%= @rental.description%></p>
  </div>
</div>
<div class="container mt-5 mb-5">
  <div class="form">
    <h2>ルーム予約</h2>
      <%= form_with model: @reservation, local:true, method: :post, url: rental_reservations_confirm_path(@rental) do |f| %>
        <div class="form-group">
          <label>開始日</label>
            <%= f.date_field:check_in, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>終了日</label>
            <%= f.date_field:check_out, class: "form-control" %>
        </div>
        <div class="form-group">
        <label>人数</label>
          <%= f.text_field:num_people, class: "form-control" %>
        </div>
        <%= f.hidden_field :rental_id, :value => @rental.id %>
        <div class="form-group">
          <%= f.submit "保存", class: "btn btn-primary float-end mt-3"%>
          <div class="clear"></div>
        </div>
      <% end %>
  </div>
</div>
