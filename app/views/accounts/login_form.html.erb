 <% if @error_message %>
  <div class="flash">
    <%= @error_message %>
  </div>
<% end %>
<div class="container">
  <div class="col-md-4 offseet-md-4">
    <h2 class="text-center mt-3">ログイン</h2>
      <%= form_with model: @users,local:true do |f| %>
        <div class="form-group">
          <label>メールアドレス</label>
            <%= f.email_field:email, class: "form-control" %>
        </div>
        <div class="form-group">              
          <label>パスワード</label>
            <%= f.password_field:password, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "ログインする", class: "btn btn-primary float-end mt-3" %>
          <div class="clear"></div>
        </div>
      <% end %>
  </div>
  <%= link_to "新規作成", new_account_path, class: "mt-3" %>
</div> 
