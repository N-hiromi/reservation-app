<div class="container">
  <h2>予約済ルーム一覧</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ルーム画像</th>
        <th scope="col">ルーム名</th>
        <th scope="col">ルーム紹介</th>
        <th scope="col">合計料金</th>
        <th scope="col">開始日</th>
        <th scope="col">終了日</th>
        <th scope="col">予約確定日時</th>
      </tr>
    </thead>
    <tbody>
        <% if @rentals %>
          <% @rentals.each do |rental| %>
          <tr>
            <td><img class="room_icon" src="<%= "/images/room_images/#{rental.room_image}" %>"></td>
            <td><%= link_to( rental.room, "/rentals/#{rental.id}" ) %></td>
            <td><%= rental.description %></td>
            <td><%= rental.price %></td>
            <td><%= rental.created_at %></td>
          </tr>
          <% end %>
        <% end %>
    </tbody>
  </table>
</div>