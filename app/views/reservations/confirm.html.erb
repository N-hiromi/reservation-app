<div class="container">
	<h2 class="mt-5 mb-3">予約内容確認</h2>
	<dl>
		<dt>開始日</dt>
		<dd><%= @reservation.check_in %></dd>
		<dt>終了日</dt>
		<dd><%= @reservation.check_out %></dd>
		<dt>人数</dt>
		<dd><%= @reservation.num_people %>人</dd>
		<dt>合計金額</dt>
		<dd><%= @reservation.total %>円</dd>
	</dl>

	<%= form_with model: @reservation, method: :post, url: rental_reservations_back_path do |f| %>
		<%= f.submit '入力画面に戻る' %>
	<% end %>

	<%= form_with model: @reservation, method: :post, url: rental_reservations_complete_path do |f| %>
		<%= f.hidden_field :check_in, :value => @reservation.check_in %>
		<%= f.hidden_field :check_out, :value => @reservation.check_out %>
		<%= f.hidden_field :num_pople, :value => @reservation.num_people %>
		<%= f.hidden_field :total, :value => @reservation.total %>
		<%= f.submit '送信する', class: "btn btn-primary float-end mt-3" %>
		<div class="clear"></div>
	<% end %>
</div>
